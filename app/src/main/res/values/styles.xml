<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos de Texto -->
    <style name="TextAppearance.PopView.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.PopView.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.PopView.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Estilos de Botones -->
    <style name="Widget.PopView.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.PopView.Body1</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.PopView.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.PopView.Body1</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilos de Tarjetas -->
    <style name="Widget.PopView.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Estilos de Campos de Texto -->
    <style name="Widget.PopView.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Estilos de Listas -->
    <style name="Widget.PopView.RecyclerView" parent="Widget.Material3.CardView">
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Estilos de DiÃ¡logos -->
    <style name="ThemeOverlay.PopView.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- Estilos Base para Actividades -->
    <style name="Widget.PopView.Activity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Estilos para AppBar -->
    <style name="Widget.PopView.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Estilos para Toolbar -->
    <style name="Widget.PopView.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextAppearance">@style/TextAppearance.PopView.Headline2</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
    </style>

    <!-- Estilos para Contenedores de Actividad -->
    <style name="Widget.PopView.ActivityContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <!-- Estilos para Contenido de Actividad -->
    <style name="Widget.PopView.ActivityContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- Estilos para Listas en Actividades -->
    <style name="Widget.PopView.ActivityList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Estilos para Tarjetas en Actividades -->
    <style name="Widget.PopView.ActivityCard" parent="Widget.PopView.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
</resources> 