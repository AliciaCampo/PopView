<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".activity.AjustesActivity">

    <com.google.android.material.appbar.AppBarLayout
        style="@style/Widget.PopView.AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.PopView.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/prefer_ncies"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            style="@style/Widget.PopView.ActivityContent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.PopView.ActivityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textViewIdioma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/idioma"
                        android:textAppearance="@style/TextAppearance.PopView.Body1"
                        android:textColor="?attr/colorOnSurface"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.PopView.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:startIconDrawable="@drawable/ic_language">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerIdioma"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.PopView.ActivityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textViewMidaText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mida_del_text"
                        android:textAppearance="@style/TextAppearance.PopView.Body1"
                        android:textColor="?attr/colorOnSurface"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.PopView.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:startIconDrawable="@drawable/ic_text_fields">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerMidaText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.PopView.ActivityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textViewHorari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zona_horaria"
                        android:textAppearance="@style/TextAppearance.PopView.Body1"
                        android:textColor="?attr/colorOnSurface"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.PopView.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:startIconDrawable="@drawable/ic_access_time">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerHorari"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.PopView.ActivityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textViewTema"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tema"
                        android:textAppearance="@style/TextAppearance.PopView.Body1"
                        android:textColor="?attr/colorOnSurface"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.PopView.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:startIconDrawable="@drawable/ic_palette">

                        <AutoCompleteTextView
                            android:id="@+id/spinnerTema"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAjuda"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ajuda"
                    app:chipIcon="@drawable/help_circle"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonRestablir"
                    style="@style/Widget.PopView.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/restablir_els_valors_predeterminats"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonGraficos"
                    style="@style/Widget.PopView.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Veure grÃ fics"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/colorSurface"
        app:elevation="8dp"
        app:itemIconTint="?attr/colorPrimary"
        app:itemTextColor="?attr/colorPrimary"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
