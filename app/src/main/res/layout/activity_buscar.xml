<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscarActivity">

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:id="@+id/linearLayoutBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewLupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?android:attr/actionModeWebSearchDrawable"
            app:tint="@color/md_theme_primaryContainer" />

        <EditText
            android:id="@+id/textBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_search_background"
            android:ems="12"
            android:hint="@string/buscar"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/md_theme_primaryContainer"
            android:textColorHint="@color/md_theme_primary" />

        <ImageView
            android:id="@+id/imageFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/filtro" />
    </LinearLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/fragment_navigation"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutBuscar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Primera fila de imágenes -->
            <LinearLayout
                android:id="@+id/linearLayoutImagenes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageSabrina"
                    android:layout_width="133dp"
                    android:layout_height="169dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Descripción del botón"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sabrina" />

                <ImageButton
                    android:id="@+id/imageButtonStrangerThings"
                    android:layout_width="133dp"
                    android:layout_height="169dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Descripción del botón"
                    android:scaleType="centerCrop"
                    android:src="@drawable/strangerthingscuatro" />
            </LinearLayout>

            <!-- Segunda fila de imágenes -->
            <LinearLayout
                android:id="@+id/linearLayoutImagenesTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageOrangeIsTheNewBlack"
                    android:layout_width="133dp"
                    android:layout_height="169dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Descripción del botón"
                    android:scaleType="centerCrop"
                    android:src="@drawable/orange_is_the_new_black" />

                <ImageButton
                    android:id="@+id/imageButtonMiercoles"
                    android:layout_width="133dp"
                    android:layout_height="169dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Descripción del botón"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wednesdaymiercoles" />
            </LinearLayout>

            <!-- Tercera fila de imágenes -->
            <LinearLayout
                android:id="@+id/linearLayoutImagenesCuatro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/deadpoolylobezno"
                    android:layout_width="133dp"
                    android:layout_height="169dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Descripción del botón"
                    android:scaleType="centerCrop"
                    android:src="@drawable/deadpoolylobezno" />

                <ImageButton
                    android:id="@+id/delrevesdos"
                    android:layout_width="133dp"
                    android:layout_height="169dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Descripción del botón"
                    android:scaleType="centerCrop"
                    android:src="@drawable/delrevesdos" />
            </LinearLayout>

            <!-- Cuarta fila de imágenes -->
            <LinearLayout
                android:id="@+id/linearLayoutImagenesCinco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageRespira"
                    android:layout_width="133dp"
                    android:layout_height="169dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Descripción del botón"
                    android:scaleType="centerCrop"
                    android:src="@drawable/respira" />

                <ImageButton
                    android:id="@+id/imageBeetlejuice"
                    android:layout_width="133dp"
                    android:layout_height="169dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Descripción del botón"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beetlejuice2" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Barra de navegación fija -->
    <fragment
        android:id="@+id/fragment_navigation"
        android:name="com.example.popview.barramenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
