<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp"
    tools:context=".EditLista">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-54dp">

        <!-- Título de la lista (Editable) -->
        <EditText
            android:id="@+id/editTextTitulo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:hint="Título de la lista"
            android:textSize="18sp" />

        <!-- Descripción o detalles de la lista -->
        <EditText
            android:id="@+id/editTextDescripcion"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Switch para privacidad -->
        <Switch
            android:id="@+id/switchPrivada"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:text="Privada" />

        <!-- EditText para añadir título de película -->
        <EditText
            android:id="@+id/editTextPelicula"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:hint="Nuevo Titulo "
            android:textSize="18sp" />

        <!-- Botón de añadir película -->
        <Button
            android:id="@+id/btnAñadirPelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Añadir titulo" />

        <!-- RecyclerView para mostrar la lista de películas añadidas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPeliculas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Botón de guardar cambios -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Guardar cambios" />

        <Button
            android:id="@+id/borrar"
            android:layout_width="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="140dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/borrar"/>

    </LinearLayout>

    <fragment
        android:name="com.example.popview.barramenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>