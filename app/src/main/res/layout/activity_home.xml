<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        tools:context=".HomeActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textCategories"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/oswald_regular"
            android:paddingBottom="10dp"
            android:text="@string/categories"
            android:textColor="@color/md_theme_primaryContainer"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonCAccio"
            app:layout_constraintStart_toStartOf="@id/textCategories"
            app:layout_constraintTop_toBottomOf="@id/textCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acci" />

        <Button
            android:id="@+id/buttonCFantasia"
            app:layout_constraintStart_toEndOf="@id/buttonCAccio"
            app:layout_constraintTop_toBottomOf="@id/textCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/fantasia" />

        <Button
            android:id="@+id/buttonCSuperherois"
            app:layout_constraintStart_toEndOf="@id/buttonCFantasia"
            app:layout_constraintTop_toBottomOf="@id/textCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/superherois" />

        <Button
            android:id="@+id/buttonCComedia"
            app:layout_constraintStart_toEndOf="@id/buttonCSuperherois"
            app:layout_constraintTop_toBottomOf="@id/textCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/comedia" />

        <TextView
            android:id="@+id/textRecomanacions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonCAccio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/oswald_regular"
            android:paddingBottom="10dp"
            android:text="@string/recomanacions"
            android:textColor="@color/md_theme_primaryContainer"
            android:textSize="30sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecomancions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textRecomanacions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textPeliculesMesPopulars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewRecomancions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/oswald_regular"
            android:paddingBottom="10dp"
            android:text="@string/pel_l_cules_m_s_populars"
            android:textColor="@color/md_theme_primaryContainer"
            android:textSize="30sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewImagePelisPop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPeliculesMesPopulars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <fragment
            android:id="@+id/fragment_navigation"
            android:name="com.example.popview.barramenu"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="70dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</android.widget.ScrollView>