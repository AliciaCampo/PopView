<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PopView"
        android:textSize="60sp"
        android:fontFamily="@font/oswaldRegular"
        android:textColor="@color/md_theme_primary" />

    <ImageView
        android:id="@+id/iconoImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Totes les teves pel·lícules i sèries, sempre a mà.\nAfegeix, organitza i valora amb un sol clic."
        android:textSize="20sp"
        android:fontFamily="@font/oswaldRegular"
        android:textColor="@color/md_theme_primary"
        android:layout_marginTop="16dp"
        android:textAlignment="center" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp" />
</LinearLayout>
